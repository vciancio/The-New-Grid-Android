<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vincente.com.multidownloadbluetooth">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ThreadActivity"
            android:label="@string/title_activity_thread"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <service
            android:name=".receivers.ForwardMessageReceiver$MyIntentService"/>

        <receiver android:name=".receivers.ScanResultReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.ftn.action.SCAN_RESULTS" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.NewMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.ftn.action.RECEIVED_MESSAGE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.ForwardMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.ftn.action.FORWARD_MESSAGE"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>
